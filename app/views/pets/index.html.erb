<div class="container py-5">
  <h1 class="mb-3">All the pets</h1>
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-md-4 mb-4">
        <div class="card" style="width: 100%;">
          <div class="card-body">
            <h5 class="card-title"><%= pet.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= pet.address %></h6>
            <p class="card-text"><%= pet.species %> - Found <%= pet.found_days_ago %> days ago </p>
            <%= link_to "See more", pet_path(pet), class: "card-link" %>
            <%= link_to "Delete", pet_path(pet), method: :delete, data: {confirm: "Are you sure?"}, class: "card-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add a pet", new_pet_path %>
</div>
